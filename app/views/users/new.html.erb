<h1>Register</h1>
<%= flash[:notice] %>

<%= form_for @user do |f| %>
  <p>
    <%= f.label 'email' %>
    <%= f.text_field 'email' %></p>
  <p>
    <%= f.label 'password' %>
    <%= f.password_field 'password' %></p>
  <p>
    <%= f.label 'password_confirmation' %>
    <%= f.password_field 'password_confirmation' %>
  </p> 
  <%= f.submit 'Register' %> 
<% end %>  